}

@DELETE
@Produces({MediaType.APPLICATION_JSON})
@Path("/delete/id: [0-9]+")
public Response delete(@PathParam("id") int id){
	data.delete(id);
	return Response.ok().build();
}

private JAXBElement<ToDo> toXml(ToDo i){
	return new JAXBElement<ToDo>(new QName("toDo"), ToDo.class, i);
}
